@model Contact
<h2>Contact Details</h2>

<table class="table">
	<thead>

	</thead>
	<tbody>
		<tr>
			<td>Name:</td>
			<td>@Model.FullName()</td>
		</tr>
		<tr>
			<td>Phone:</td>
			<td>@Model.PhoneNumber</td>
		</tr>
		<tr>
			<td>Email:</td>
			<td>@Model.EmailAddress</td>
		</tr>
		<tr>
			<td>Category:</td>
			<td>@Model.CategoryID</td>
		</tr>
		<tr>
			<td>Organization:</td>
			<td>@Model.Organization</td>
		</tr>
		<tr>
			<td>Date Added:</td>
			<td>@Model.DateAdded.ToString()</td>
		</tr>
		<tr>
			<td>
				<a asp-controller="Contact" asp-action="Edit" asp-route-id="@Model.ContactId" class="btn btn-dark">Edit</a>
				<a asp-controller="Contact" asp-action="Delete" asp-route-id="@Model.ContactId" class="btn btn-dark">Delete</a>
				<a asp-controller="Home" asp-action="Index" class="btn btn-dark">Home</a>
			</td>
			<td></td>
		</tr>
	</tbody>
</table>